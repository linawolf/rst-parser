{% apply spaceless %}
<figure class="figure">
    {{ figureNode.image.render()|raw }}

    {% if figureNode.document %}
        {% set caption = figureNode.document.render()|trim %}

        {% if caption %}
            <figcaption class="figure-caption">{{ caption|raw }}</figcaption>
        {% endif %}
    {% endif %}
</figure>
{% endapply %}
